altscreen on # erase screen when quit apps                                                                                                                                                 
defutf8 on
defc1 off # treat input chars 128 ~ 159 as control functions
defflow on
startup_message off 
shell $SHELL
defencoding utf8
bindkey "^b"  encoding big5 utf8
bindkey "^u"  encoding utf8 big5
defbce on # erase background with current bg color
shelltitle "--"
#caption always "%{WK}%-w%<%{=B GK}%n %t%{= KW}%+w%-09="
caption always "%{WK}%-w%<%{= GK}%n %t%{= KW}%+w%-09="
hardstatus alwayslastline "%{R}[ %{w}%1` %{R}]%=%{M}%e %{G}%H %{Y} %c %{R} %d/%m/%Y %{K} Load: %l %{w}"
bind u encoding utf8 utf8
bind b encoding big5 utf8
bind "X" remove
bind "Q" only
bind "|" split -v
bind "-" split
bind "c" screen
bind "l" redisplay
bind "." eval "echo \"source $HOME/.screenrc\"" "source $HOME/.screenrc" 
bind "h" help
bind ">" writebuf $HOME/.screen_exchange
bind "<" readbuf $HOME/.screen_exchange

#check key use "showkey -a"

#for mac
bindkey "^[[1;5C" next
bindkey "^[[1;5D" prev
#END

bindkey "^[[5C" next
bindkey "^[[5D" prev

bindkey "^[[C" next
bindkey "^[[D" prev
bindkey "^[x" next
bindkey "^[z" prev
